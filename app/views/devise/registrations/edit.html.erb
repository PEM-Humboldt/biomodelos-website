<div class="innercontainer fondoplumas nbg7">
  <div class="loginbox">
    <h2><%= t('biomodelos.users.edit_profile.title') %></h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <br \>
      <h3><%= t('biomodelos.users.edit_profile.text_1') %></h3>
      <div class="field">
        <%= f.label :email, rel: "tooltip", title: t('biomodelos.users.edit_profile.valid_email_tt')%>
        <%= f.input :email, required: true, autofocus: "off", label: false %>
      </div>

      <div class="field">
        <%= f.label :name %>
        <%= f.input :name, required: true, autofocus: "off", label: false, placeholder: t('biomodelos.users.edit_profile.name_ph'), :input_html => {maxlength: 55} %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :expertise %>
        <%= f.input :expertise, autocomplete: "off", label: false, placeholder: t('biomodelos.users.edit_profile.expertise_ph'), :input_html => { maxlength: 100 } %>
      </div>

      <div class="field">
        <%= f.label :organization %>
        <%= f.input :organization, autocomplete: "off", label: false, placeholder: t('biomodelos.users.edit_profile.organization_ph'), :input_html => {maxlength: 50 } %>
      </div>

      <div class="field"> 
        <%= f.label :location %>
        <%= f.input :location, autocomplete: "off", label: false, placeholder: t('biomodelos.users.edit_profile.location_ph'), :input_html => {maxlength: 50 } %>
      </div>

      <div class="field mb40">
        <%= f.label :bio %>
        <%= f.text_area :bio, autocomplete: "off", label: false, placeholder: t('biomodelos.users.edit_profile.bio_ph'), :input_html => { maxlength: 600} %>
      </div>

      <div class="inputBtnSection ml0">
        <input id="uploadFile" class="disableInputField w203" placeholder="<%= t('biomodelos.users.edit_profile.file_ph') %>" />
          <label class="fileUpload">
            <%= f.input :avatarURL, :as => :file, :required => true, label: false, error_html: {:class => 'publierror'}, :input_html => { :id => "uploadBtn", :class => "upload"} %>
            <span class="uploadBtn"><%= t('biomodelos.users.edit_profile.change_photo') %></span>
          </label>
      </div>
      <h3><%= t('biomodelos.users.edit_profile.password_change') %></h3>
      <div class="field">
        <%= f.label :clave %> <i><%= t('biomodelos.users.edit_profile.password_notice') %></i>
        <%= f.input :password, autocomplete: "off", label: false, placeholder: t('biomodelos.users.edit_profile.new_password_ph'), required: false %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.input :password_confirmation, label: false, placeholder: t('biomodelos.users.edit_profile.confirm_password_ph'), required: false %>
      </div>
      <br \>
      <h3><%= t('biomodelos.users.edit_profile.confirm_changes') %></h3>
      <div class="field mb40">
        <%= f.label :current_password %> <i><%= t('biomodelos.users.edit_profile.current_password_notice') %></i>
        <%= f.input :current_password, autocomplete: "off", label: false, placeholder: t('biomodelos.users.edit_profile.current_password_ph'), required: true  %>
      </div>

        <%= f.submit t('biomodelos.users.edit_profile.submit_btn'), :class => "ml20" %>
    <% end %>

   <%= link_to t('biomodelos.users.edit_profile.back_lnk'), :back %>
  </div>
</div>

<script>
  $(document).ready(function(){
    document.getElementById("uploadBtn").onchange = function () {
        document.getElementById("uploadFile").value = this.value;
    };
  });
</script>