<div class="innercontainer fondoplumas nbg8">
  <div class="loginbox">
  	<h2><%= t('devise.passwords.new.title')%></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb40">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true %>
      </div>
      <p class="groupuser"><%= t('devise.passwords.new.alert_text_html')%></p><br/>
      <div class="actions">
        <%= f.submit t('devise.passwords.new.submit_btn') %>
      </div>
    <% end %>
    <div class="respclear"></div>
    <%= render "devise/shared/links" %>
  </div>
</div>