<div class="innercontainer fondoplumas">
  <div class="loginbox">
    <h2><%= t('devise.passwords.edit.title')%></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :nueva_clave, t('devise.passwords.edit.new_password') %><br />
        <% if @minimum_password_length %>
        <em>
            <%=t('devise.passwords.edit.min') %>
            <%= @minimum_password_length %> 
            <%=t('devise.passwords.edit.char') %>
        </em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
      </div>

      <div class="field mb40">
        <%= f.label :confirmar_clave, t('devise.passwords.edit.confirm_new_password') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit t('devise.passwords.edit.submit_btn') %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
