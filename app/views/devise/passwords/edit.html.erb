<div class="innercontainer fondoplumas">
  <div class="loginbox">
    <h2>cambiar mi clave</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
            <%= f.label :nueva_clave, "New password" %><br />
            <% if @minimum_password_length %>
            <em>(m√≠nimo <%= @minimum_password_length %> caracteres)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
        </div>

        <div class="field mb40">
            <%= f.label :confirmar_clave, "Confirm new password" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="actions">
            <%= f.submit "CAMBIAR" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>