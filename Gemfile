source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '~> 7.2', '>= 6.1.7'
# Dependence required by rails
gem 'actionpack', '~> 7.2', '>= 6.1'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 6.0'
# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 5.0.0'
# Use jquery as the JavaScript library
gem 'jquery-rails', '~> 4.6', '>= 4.6.0'
# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks', '~> 5.2', '>= 5.2.1'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.13'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 2.6', '>= 2.6.1'
#Devise is a flexible authentication solution for Rails based on Warden
gem 'devise', '~> 4.9', '>= 4.9.4'
#Simple Form aims to be as flexible as possible while helping you with powerful components to create your forms.
gem 'simple_form', '~> 5.3', '>= 5.3.1'
#HTTP Requests
gem 'httparty', '~> 0.22.0'
#Uploader
gem 'carrierwave', '~> 3.1', '>= 3.1.1'
#Manipulates images
gem 'mini_magick', '~> 5.1', '>= 5.1.2'
#Protects from bomb images
gem 'carrierwave-bombshelter', '~> 0.2.2' 
#reCaptcha
gem 'recaptcha', '~> 5.19', require: "recaptcha/rails" #reCaptcha
# alertifyjs for rails
gem 'alertifyjs-rails', '~> 1.12', '>= 1.11.2'

group :development, :test do
  # Call 'byebug' anywhere in the code to stop execution and get a debugger console
  gem 'byebug'
  gem 'rspec-rails', '~> 3.9'
  gem 'factory_girl_rails', '~> 4.7.0'
  gem 'capybara', '~> 3.40'
end

group :development do
  # Access an IRB console on exception pages or by using <%= console %> in views
  gem 'web-console', '~> 4.2', '>= 4.2.1'
  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem 'spring', '~> 4.2.1'
end


